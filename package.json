{
  "name": "electron-async-storage",
  "version": "0.0.5",
  "description": "An electron async storage library based on unstorage",
  "homepage": "https://github.com/YougLin-dev/electron-async-storage",
  "repository": "https://github.com/YougLin-dev/electron-async-storage",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./drivers/*": {
      "types": "./drivers/*.d.ts",
      "import": "./drivers/*.mjs",
      "require": "./drivers/*.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "drivers"
  ],
  "scripts": {
    "build": "pnpm gen-drivers && unbuild && jiti scripts/fix-driver-imports.ts",
    "gen-drivers": "jiti scripts/gen-drivers.ts",
    "dev": "vitest",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "eslint . --fix && prettier -w .",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && git push --follow-tags && pnpm publish",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck",
    "electron-async-storage": "pnpm jiti src/cli"
  },
  "dependencies": {
    "anymatch": "^3.1.3",
    "chokidar": "^4.0.3",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "changelogen": "^0.6.2",
    "eslint": "^9.35.0",
    "eslint-config-unjs": "^0.5.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "mlly": "^1.8.0",
    "prettier": "^3.6.2",
    "scule": "^1.3.0",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "sharp",
      "workerd"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
